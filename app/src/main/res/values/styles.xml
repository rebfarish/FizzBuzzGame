<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
  <style name = "ValueDisplay" parent="AppTheme">
    <item name = "android:textSize"> 150sp</item>
  </style>

  <style name = "FizzBuzzToggle" parent="AppTheme">
    <item name="android:textSize">32sp</item>
    <item name = "android:layout_width">120dp</item>
  </style>

  <style name = "Tally" parent="AppTheme">
    <item name = "android:textSize">32sp</item>
  </style>

  <style name = "CorrectTally" parent="Tally">
    <item name = "android:textColor">#8000C000</item>
  </style>

  <style name = "IncorrectTally" parent="Tally">
    <item name = "android:textColor">#80FF0000</item>
  </style>

</resources>
